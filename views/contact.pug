// Contact Information for the agency and individual agents
main.ouragency
  section.ourinfo 
    h2 Contact Our Agency: 
    br
    h3 Calgary Office
    h3 !{agencies[0].AgncyAddress}
    br
    h3 !{agencies[0].AgncyCity} !{agencies[0].AgncyProv}
    br
    h3 !{agencies[0].AgncyCountry} !{agencies[0].AgncyPostal}
    br
    h3 !{agencies[0].AgncyPhone}
  
  figure.map
