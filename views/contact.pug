// Line Break
h1.break Agents Contact:

// Agencies table with address and agents as rows
div.agencies
  section.agents 
    h1 Agency 1
    table.box
      tr.head
        th= agencies[0].AgncyAddress+','
        th= agencies[0].AgncyCity
      br
      table
        for item in agentList1
          tr
            th= item.AgtFirstName
            th= item.AgtLastName
            th= item.AgtBusPhone
            th= item.AgtEmail

  section.agents 
    h1 Agency 2
    table.box
      tr.head
        th= agencies[1].AgncyAddress+ ','
        th= agencies[1].AgncyCity
      br
      table
        for item in agentList2
          tr
            th= item.AgtFirstName
            th= item.AgtLastName
            th= item.AgtBusPhone
            th= item.AgtEmail

  
